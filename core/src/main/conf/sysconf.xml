<?xml version="1.0" encoding="UTF-8" ?>
<task-schedule-data>
    <monitor-items>
        <monitor-item>
            <!--监控类型-->
            <type>sdb</type>
            <!--监控地址-->
            <url></url>
            <!--监控用户-->
            <user></user>
            <!--监控密码-->
            <password></password>
            <!--加密私钥-->
            <private-key></private-key>
            <!--加密公钥-->
            <public-key></public-key>
        </monitor-item>
    </monitor-items>
    <output>
        <type>sdb</type>
        <args>
            <arg>
                <key>domain</key>
                <value>monitorDomain</value>
            </arg>
            <arg>
                <key>cs</key>
                <value>monitor</value>
            </arg>
            <arg>
                <key>history_suffix</key>
                <value>_his</value>
            </arg>
            <arg>
                <key>backup</key>
                <value>3</value>
            </arg>
        </args>
    </output>
    <schedule>
        <task>
            <!--任务名称-->
            <name>node</name>
            <!--任务类型-->
            <task-type>sdb_node</task-type>
            <!--任务监控项-->
            <task-items>
                <task-item>status</task-item>
            </task-items>
            <cron-expression></cron-expression>
            <misfire-instruction>1</misfire-instruction>
            <output>
                <entry>
                    <key>backupIndex</key>
                    <vale></vale>
                </entry>
                <entry></entry>
            </output>
            <args>
                <arg>
                    <key>include</key>
                    <value>sdbserver1:11810,sdbserver2:11810,sdbserver3:11810</value>
                </arg>
            </args>
        </task>
    </schedule>
</task-schedule-data>